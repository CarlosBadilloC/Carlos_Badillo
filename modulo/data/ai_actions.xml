<odoo>
    <record id="ai_action_get_stock" model="ir.actions.server">
        <field name="name">Obtener Stock de Producto</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="state">code</field>
        <field name="code">
result = env['ai.inventory.actions'].get_stock(product_name)
        </field>
        <field name="use_in_ai">True</field>
        <field name="ai_tool_description">Consulta el stock disponible, marca, categoría y precio de un producto específico</field>
        <field name="ai_action_prompt">Cuando el usuario pregunta por el stock, marca o precio de un producto específico</field>
        <field name="ai_tool_schema">{
  "type": "object",
  "properties": {
    "product_name": {
      "type": "string",
      "description": "Nombre exacto del producto a buscar"
    }
  },
  "required": ["product_name"]
}</field>
    </record>

    <record id="ai_action_search_products_keyword" model="ir.actions.server">
        <field name="name">Buscar Productos por Palabra Clave</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="state">code</field>
        <field name="code">
result = env['ai.inventory.actions'].search_products_by_keyword(keyword, limit or 10)
        </field>
        <field name="use_in_ai">True</field>
        <field name="ai_tool_description">Busca productos por palabra clave amplia en nombre, descripción o categoría. Ideal para búsquedas como 'pelotas de futbol', 'raquetas Nike', 'zapatos deportivos', etc. Muestra marca, stock y precio.</field>
        <field name="ai_action_prompt">Cuando el usuario busca productos de forma general o con palabras clave amplias (ej: 'pelotas', 'futbol', 'Nike')</field>
        <field name="ai_tool_schema">{
  "type": "object",
  "properties": {
    "keyword": {
      "type": "string",
      "description": "Palabra clave o frase para buscar productos (ej: 'pelotas de futbol', 'raquetas', 'Nike')"
    },
    "limit": {
      "type": "integer",
      "description": "Número máximo de resultados (por defecto 10)"
    }
  },
  "required": ["keyword"]
}</field>
    </record>

    <record id="ai_action_check_low_stock" model="ir.actions.server">
        <field name="name">Verificar Stock Bajo</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="state">code</field>
        <field name="code">
result = env['ai.inventory.actions'].check_low_stock(threshold or 10)
        </field>
        <field name="use_in_ai">True</field>
        <field name="ai_tool_description">Verifica productos con stock por debajo del umbral especificado</field>
        <field name="ai_action_prompt">Cuando el usuario pregunta sobre productos con poco stock</field>
        <field name="ai_tool_schema">{
  "type": "object",
  "properties": {
    "threshold": {
      "type": "integer",
      "description": "Umbral de stock bajo (por defecto 10)"
    }
  },
  "required": []
}</field>
    </record>

    <record id="ai_action_inventory_summary" model="ir.actions.server">
        <field name="name">Resumen de Inventario</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="state">code</field>
        <field name="code">
result = env['ai.inventory.actions'].get_inventory_summary()
        </field>
        <field name="use_in_ai">True</field>
        <field name="ai_tool_description">Obtiene un resumen completo del estado del inventario con totales y valores</field>
        <field name="ai_action_prompt">Cuando el usuario pide un resumen o estado general del inventario</field>
        <field name="ai_tool_schema">{
  "type": "object",
  "properties": {},
  "required": []
}</field>
    </record>

    <record id="ai_action_search_by_category" model="ir.actions.server">
        <field name="name">Buscar Productos por Categoría</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="state">code</field>
        <field name="code">
result = env['ai.inventory.actions'].search_product_by_category(category_name)
        </field>
        <field name="use_in_ai">True</field>
        <field name="ai_tool_description">Busca productos por categoría específica mostrando marca, stock y precio de cada uno</field>
        <field name="ai_action_prompt">Cuando el usuario pregunta por productos de una categoría específica</field>
        <field name="ai_tool_schema">{
  "type": "object",
  "properties": {
    "category_name": {
      "type": "string",
      "description": "Nombre de la categoría de productos"
    }
  },
  "required": ["category_name"]
}</field>
    </record>

</odoo>