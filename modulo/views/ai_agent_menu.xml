<odoo>
    <record id="action_ai_agent_custom" model="ir.actions.act_window">
        <field name="name">AI Agents (Gemini)</field>
        <field name="res_model">ai.agent</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_id': ref('view_ai_agent_list_custom'), 'view_mode': 'list'}), (0, 0, {'view_id': ref('view_ai_agent_form_custom'), 'view_mode': 'form'})]"/>
    </record>

    <menuitem id="menu_ai_root_custom"
              name="Agente IA"
              sequence="10"/>

    <menuitem id="menu_ai_agent_custom"
              name="Agents"
              parent="menu_ai_root_custom"
              action="action_ai_agent_custom"/>

    <!-- Acción para Gemini Config -->
    <record id="action_gemini_config" model="ir.actions.act_window">
        <field name="name">Configuración Gemini</field>
        <field name="res_model">gemini.config</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menú para Gemini Config -->
    <menuitem id="menu_gemini_config"
              name="Configuración Gemini"
              parent="menu_ai_root_custom"
              action="action_gemini_config"
              sequence="20"/>
</odoo>