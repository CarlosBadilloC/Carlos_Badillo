<odoo>
    <!-- FORM VIEW FOR GEMINI CONFIG -->
    <record id="view_gemini_config_form" model="ir.ui.view">
        <field name="name">gemini.config.form</field>
        <field name="model">gemini.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="api_key" password="True"/>
                        <field name="model"/>
                    </group>
                    
                    <group>
                        <field name="max_tokens"/>
                        <field name="temperature"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LIST VIEW FOR GEMINI CONFIG -->
    <record id="view_gemini_config_list" model="ir.ui.view">
        <field name="name">gemini.config.list</field>
        <field name="model">gemini.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="model"/>
                <field name="max_tokens"/>
                <field name="temperature"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- SEARCH VIEW FOR GEMINI CONFIG -->
    <record id="view_gemini_config_search" model="ir.ui.view">
        <field name="name">gemini.config.search</field>
        <field name="model">gemini.config</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="model"/>
                <filter name="active_configs" string="Activos" domain="[('active', '=', True)]"/>
            </search>
        </field>
    </record>
</odoo>