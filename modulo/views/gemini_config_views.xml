<odoo>

    <!-- LIST VIEW -->
    <record id="view_gemini_config_list" model="ir.ui.view">
        <field name="name">gemini.config.list</field>
        <field name="model">gemini.config</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="model"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_gemini_config_form" model="ir.ui.view">
        <field name="name">gemini.config.form</field>
        <field name="model">gemini.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                    <group string="Configuración Google Gemini">
                        <field name="api_key" password="True"/>
                        <field name="model"/>
                        <field name="max_tokens"/>
                        <field name="temperature"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_gemini_config" model="ir.actions.act_window">
        <field name="name">Configuración Gemini</field>
        <field name="res_model">gemini.config</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_gemini_config"
              name="Configuración Gemini"
              parent="menu_ai_root_custom"
              action="action_gemini_config"/>

</odoo>