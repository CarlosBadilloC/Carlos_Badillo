<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.ai.agent</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="AI Agent" string="AI Agent" data-key="ai_agent">
                    <h2>Configuración del Agente IA</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="ai_agent_enabled"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="ai_agent_enabled"/>
                                <div class="text-muted">
                                    Habilita el agente IA para consultas de inventario
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="ai_api_key" string="Google Gemini API Key"/>
                                <field name="ai_api_key" password="True" placeholder="Ingresa tu API Key de Google Gemini"/>
                                <div class="text-muted">
                                    Obtén tu API Key en: https://makersuite.google.com/app/apikey
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="ai_model_name" string="Modelo de IA"/>
                                <field name="ai_model_name"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>